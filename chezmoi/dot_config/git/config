[alias]
	b = "branch"
	bt = "branch -v --sort=-committerdate"
	c = "commit"
	co = "checkout"
	d = "diff"
	dc = "diff --cached"
	l = "log"
	rsw = "restore --staged --worktree"
	s = "status"
	sw = "switch"

[commit]
	gpgsign = true

[core]
	pager = "delta"

[delta]
	line-numbers = true

[gpg]
	format = "ssh"

[init]
	defaultBranch = "main"

[interactive]
	diffFilter = "delta --color-only"

[pull]
	rebase = true
	autoStash = true

[push]
	autoSetupRemote = true
	default = "current"

[rebase]
	autosquash = true

[merge "mergiraf"]
    name = mergiraf
    driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P

