    gitlab_token="$(rbw get GITLAB_TOKEN)"
    export TF_HTTP_PASSWORD="$gitlab_token" && echo "âœðŸ¾ TF_HTTP_PASSWORD" # Authentication for GitLab-Managed Terraform State
    export TF_VAR_gitlab_token="$gitlab_token" && echo "âœðŸ¾ TF_VAR_gitlab_token" # Conventional input we use for GitLab Terraform Provider authentication
    export GITLAB_TOKEN="$gitlab_token" && echo "âœðŸ¾ GITLAB_TOKEN"
    export GL_TOKEN="$gitlab_token" && echo "âœðŸ¾ GL_TOKEN"
    export LAB_CORE_TOKEN="$gitlab_token" && echo "âœðŸ¾ LAB_CORE_TOKEN"
    github_token="$(rbw get GITHUB_TOKEN)"
